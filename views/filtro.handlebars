<div class="container">
    <div class="table-responsive">
        <table class="table table-hover bg-light">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Game</th>
                    <th scope="col">Quantidade</th>
                    <th scope="col">Valor</th>
                    <th scope="col">Capa</th>
                    <th scope="col">AÇÕES</th>
                </tr>
            </thead>
            <tbody>
                {{#each produtos}}
                <tr>
                    <th scope="row">{{this.id}}</th>
                    <td>{{this.jogo}}</td>
                    <td>{{this.quantidade}}</td>
                    <td>{{this.valor}}</td>
                    <td>
                        <i class="bi bi-circle-fill" style="color: {{this.aleatorio}};"></i>
                    </td>
                    <td>
                        <a href="/editar/{{this.id}}" class="btn btn-outline-warning btn-sm"><i class="bi bi-pencil-square"></i></a>
                        <a href="" class="btn btn-outline-danger btn-sm"><i class="bi bi-trash2-fill"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

